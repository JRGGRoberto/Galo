<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/fundo_galo"
    tools:context="com.example.galo.MainActivity" >

    
    
    <ImageView 
        android:id="@+id/b12" 
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/b22"
        android:src="@drawable/bola"
        style="@style/botao"/>
    
   <ImageView 
        android:id="@+id/b11"
        style="@style/botao"
        android:layout_above="@+id/b21"
        android:layout_toLeftOf="@+id/b12"
        android:src="@drawable/cruz" />
    
    <ImageView 
        android:id="@+id/b13" 
        style="@style/botao" 
        android:layout_toRightOf="@+id/b12"
        android:layout_above="@+id/b23"
        android:src="@drawable/cruz"/>

    <ImageView
        android:id="@+id/b22"
        style="@style/botao"
        android:layout_centerHorizontal="true"
        android:layout_above="@+id/b32"
        android:src="@drawable/cruz" />

    <ImageView
        android:id="@+id/b23"
        android:layout_toRightOf="@+id/b22"
        android:layout_above="@+id/b33"
        style="@style/botao"
        android:src="@drawable/bola" />

    <ImageView
        android:id="@+id/b31"
        style="@style/botao"
        android:layout_toLeftOf="@+id/b32"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        android:src="@drawable/cruz" />

    <ImageView
        android:id="@+id/b32"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="15dp"
        style="@style/botao"
        android:src="@drawable/bola" />
    
    <ImageView
        android:id="@+id/b33"
        style="@style/botao"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@id/b32"
        android:layout_marginBottom="15dp"
        android:src="@drawable/cruz" />

    <ImageView
        android:id="@+id/b21"
        style="@style/botao"
        android:layout_above="@+id/b31"
        android:layout_toLeftOf="@+id/b22"
        android:src="@drawable/cruz" />

    <ImageView
        android:id="@+id/bcomecar"
        android:layout_width="200dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:src="@drawable/botao_comecar" />

    <ImageView
        android:id="@+id/grelha"
        android:layout_width="200dp"
        android:layout_height="300dp"
        android:layout_alignLeft="@+id/b11"
        android:layout_alignParentBottom="true"
        android:layout_alignRight="@+id/b13"
        android:src="@drawable/grelha" />
    

</RelativeLayout>
